@page
@model MedicalTranscriptionSystem.Pages.Patient.MyConsultations.CreateConsultationsModel
@{
    ViewData["Title"] = "Create Consultation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Create a New Consultation</h2>

        <form method="post">
            <div class="mb-3">
                <label for="patientName" class="form-label">Patient Name</label>
                <input type="text" class="form-control" id="patientName" name="PatientName" required />
            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Consultation Date</label>
                <input type="date" class="form-control" id="date" name="Date" required />
            </div>
            <div class="mb-3">
                <label for="findings" class="form-label">Findings</label>
                <textarea class="form-control" id="findings" name="Findings" required></textarea>
            </div>
            <div class="mb-3">
                <label for="recommended" class="form-label">Recommended Actions</label>
                <textarea class="form-control" id="recommended" name="Recommended" required></textarea>
            </div>
            <div class="mb-3">
                <label for="treatments" class="form-label">Treatments</label>
                <textarea class="form-control" id="treatments" name="Treatments" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Create Consultation</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>