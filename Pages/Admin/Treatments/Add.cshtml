@page
@model MedicalTranscriptionSystem.Pages.Manage.Treatments.AddModel
@{
}

<h2>Add New Item</h2>

<form method="post">
    <div>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" asp-for="Item.Name" />
        <span asp-validation-for="Item.Name" class="text-danger"></span>
    </div>

    <div>
        <label for="Price">Price:</label>
        <input type="text" id="Price" name="Price" asp-for="Item.Price" />
        <span asp-validation-for="Item.Price" class="text-danger"></span>
    </div>

    <button type="submit">Add Item</button>
</form>

