@page
@model MedicalTranscriptionSystem.Pages.Public.PatientSignUpModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">@ViewData["Title"]</h2>

        @if (Model.IsSubmitted)
        {
            <div class="alert alert-success" role="alert">
                Patient Sign Up Successful!
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label for="fullName" class="form-label">Full Name</label>
                <input type="text" class="form-control" id="fullName" name="FullName" value="@Model.Patient.FullName" required />
                <span class="text-danger">@Model.FullNameError</span>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="Email" value="@Model.Patient.Email" required />
                <span class="text-danger">@Model.EmailError</span>
            </div>

            <div class="mb-3">
                <label for="dob" class="form-label">Date of Birth</label>
                <input type="date" class="form-control" id="dob" name="DateOfBirth" value="@Model.Patient.DateOfBirth.ToString("yyyy-MM-dd")" required />
                <span class="text-danger">@Model.DateOfBirthError</span>
            </div>

            <div class="mb-3">
                <label class="form-label">Gender</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="genderMale" name="Gender" value="Male" @if (Model.Patient.Gender == "Male")
                    {
                        <text>checked</text>
                    } />
                    <label class="form-check-label" for="genderMale">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="genderFemale" name="Gender" value="Female" @if (Model.Patient.Gender == "Female")
                    {
                        <text>checked</text>
                    } />
                    <label class="form-check-label" for="genderFemale">Female</label>
                </div>
            </div>

            <div class="mb-3">
                <label for="phone" class="form-label">Phone Number</label>
                <input type="tel" class="form-control" id="phone" name="PhoneNumber" value="@Model.Patient.PhoneNumber" required />
                <span class="text-danger">@Model.PhoneNumberError</span>
            </div>

            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>