@page
@model MedicalTranscriptionSystem.Pages.Provider.PatientProfiles.ConsultationsModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>Patient Consultations</h2>

        <div>
            <h4>Consultations for @Model.Patient.Name</h4>
            <ul class="list-group">
                @foreach (var consultation in Model.Consultations)
                {
                    <li class="list-group-item">
                        <a href="/PatientConsultations/ConsultationDetails?id=@consultation.Id">
                            Consultation on @consultation.Date.ToShortDateString()
                        </a>
                        <div>
                            <a href="/PatientConsultations/MoveConsultation?id=@consultation.Id" class="btn btn-warning btn-sm">Move</a>
                            <a href="/PatientConsultations/CancelConsultation?id=@consultation.Id" class="btn btn-danger btn-sm">Cancel</a>
                        </div>
                    </li>
                }
            </ul>
        </div>

        <br />
        <a href="/PatientConsultations/CreateConsultation" class="btn btn-primary">Create New Consultation</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>