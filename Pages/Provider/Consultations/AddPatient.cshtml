@page
@model MedicalTranscriptionSystem.Pages.Provider.Consultations.AddPatientModel
@{
}

<h2>Add New Patient</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" class="form-control" asp-for="Patient.Name" />
        <span asp-validation-for="Patient.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Age">Age:</label>
        <input type="number" id="Age" name="Age" class="form-control" asp-for="Patient.Age" />
        <span asp-validation-for="Patient.Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" id="Email" name="Email" class="form-control" asp-for="Patient.Email" />
        <span asp-validation-for="Patient.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ProfilePictureFile">Profile Picture:</label>
        <input type="file" id="ProfilePictureFile" name="ProfilePictureFile" class="form-control" asp-for="Patient.ProfilePictureFile" />
        <span asp-validation-for="Patient.ProfilePictureFile" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Patient</button>
        <a href="/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<a href="/Index">Back to list</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}